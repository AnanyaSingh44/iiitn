<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </head>
  <body>

    <%- include("./navbar.ejs") %>
    <div class="container-fluid ps-4 mt-3">
      <button onclick="handleBack()" class="btn btn-light shadow" 
       style="transition: all 0.3s ease; border: none;" 
       onmouseover="this.style.cssText='transform:scale(1.1); transition:all 0.3s ease; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075)!important;'" 
       onmouseout="this.style.cssText='transform:scale(1); transition:all 0.3s ease; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15)!important;'">
      <i class="bi bi-arrow-left fs-4"></i> 
      </button>
    </div>

    <script>
      function handleBack() {
      const btn = event.currentTarget;
      btn.style.transform = 'scale(0.85)';
      setTimeout(() => {
        history.back();
      }, 800);
      }
    </script>
    <div class="container">
      <%- body %>
    </div>

    <%- include("./footer.ejs") %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
