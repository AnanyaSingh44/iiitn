<% layout('./admin/layout/boilerplate.ejs') -%>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Update Faculty Member</h2>
        <form action="/admin/faculty/edit/<%= faculty._id %>?_method=PATCH" method="POST">
        
            <div class="mb-3">
                <label for="name" class="form-label">Name*</label>
                <input type="text" class="form-control" id="name" name="data[name]" value="<%= faculty.name %>" required>
            </div>
            <div class="mb-3">
                <label for="department" class="form-label">Department*</label>
                <input type="text" class="form-control" id="department" name="data[department]" value="<%= faculty.department %>" required>
            </div>
            <div class="mb-3">
                <label for="position" class="form-label">Position*</label>
                <input type="text" class="form-control" id="position" name="data[position]" value="<%= faculty.position %>" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Profile Image URL</label>
                <input type="text" class="form-control" id="image" name="data[image]" value="<%= faculty.image %>">
            </div>
            <div class="mb-3">
                <label for="education" class="form-label">Education (Comma Separated)</label>
                <input type="text" class="form-control" id="education" name="data[education]" value="<%= faculty.education ? faculty.education.join(', ') : '' %>">
            </div>
            <div class="mb-3">
                <label for="experience" class="form-label">Experience (Comma Separated)</label>
                <input type="text" class="form-control" id="experience" name="data[experience]" value="<%= faculty.experience ? faculty.experience.join(', ') : '' %>">
            </div>
            <div class="mb-3">
                <label for="teaching" class="form-label">Teaching Areas (Comma Separated)</label>
                <input type="text" class="form-control" id="teaching" name="data[teaching]" value="<%= faculty.teaching ? faculty.teaching.join(', ') : '' %>">
            </div>
            <div class="mb-3">
                <label for="research" class="form-label">Research Areas (Comma Separated)</label>
                <input type="text" class="form-control" id="research" name="data[research]" value="<%= faculty.research ? faculty.research.join(', ') : '' %>">
            </div>
            <div class="mb-3">
                <label for="supervision" class="form-label">Supervision</label>
                <input type="text" class="form-control" id="supervision" name="data[supervision]" value="<%= faculty.supervision %>">
            </div>
            <div class="mb-3">
                <label for="publication" class="form-label">Publications (Comma Separated)</label>
                <input type="text" class="form-control" id="publication" name="data[publication]" value="<%= faculty.publication ? faculty.publication.join(', ') : '' %>">
            </div>
            <div class="mb-3">
                <label for="responsibility" class="form-label">Responsibilities (Comma Separated)</label>
                <input type="text" class="form-control" id="responsibility" name="data[responsibility]" value="<%= faculty.responsibility ? faculty.responsibility.join(', ') : '' %>">
            </div>
            <div class="mb-3">
                <label for="socialLinks" class="form-label">Social Links</label>
                <input type="text" class="form-control" id="twitter" name="data[socialLinks][twitter]" placeholder="Twitter URL" value="<%= faculty.socialLinks.twitter %>">
                <input type="text" class="form-control mt-2" id="linkedin" name="data[socialLinks][linkedin]" placeholder="LinkedIn URL" value="<%= faculty.socialLinks.linkedin %>">
                <input type="text" class="form-control mt-2" id="github" name="data[socialLinks][github]" placeholder="GitHub URL" value="<%= faculty.socialLinks.github %>">
                <input type="text" class="form-control mt-2" id="facebook" name="data[socialLinks][facebook]" placeholder="Facebook URL" value="<%= faculty.socialLinks.facebook %>">
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username*</label>
                <input type="text" class="form-control" id="username" name="data[username]" value="<%= faculty.username %>" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email*</label>
                <input type="email" class="form-control" id="email" name="data[email]" value="<%= faculty.email %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>
