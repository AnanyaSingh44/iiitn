<% layout('./admin/layout/boilerplate.ejs') -%>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Update Faculty</h2>
        <form action="/admin/faculty/<%= data._id %>?_method=PATCH" method="POST" >
            <div class="mb-3">
                <label for="name" class="form-label">Name*</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>" required>
            </div>
            <div class="mb-3">
                <label for="department" class="form-label">Department*</label>
                <select class="form-control" id="department" name="department" required>
                    <option value="cse" <%= data.department === 'cse' ? 'selected' : '' %>>CSE</option>
                    <option value="ece" <%= data.department === 'ece' ? 'selected' : '' %>>ECE</option>
                    <option value="bs" <%= data.department === 'bs' ? 'selected' : '' %>>BS</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="position" class="form-label">Position*</label>
                <select class="form-control" id="position" name="position" required>
                    <option value="hod" <%= data.position === 'hod' ? 'selected' : '' %>>HOD</option>
                    <option value="faculty-member" <%= data.position === 'faculty-member' ? 'selected' : '' %>>Faculty Member</option>
                    <option value="staff" <%= data.position === 'staff' ? 'selected' : '' %>>Staff</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Profile Image</label>
                <input type="text" class="form-control" id="image" name="image">
            </div>
            <div class="mb-3">
                <label for="education" class="form-label">Education (One per line)</label>
                <textarea class="form-control" id="education" name="education" rows="3"><%= data.education %></textarea>
            </div>
            <div class="mb-3">
                <label for="experience" class="form-label">Experience (One per line)</label>
                <textarea class="form-control" id="experience" name="experience" rows="3"><%= data.experience %></textarea>
            </div>
            <div class="mb-3">
                <label for="teaching" class="form-label">Teaching (One per line)</label>
                <textarea class="form-control" id="teaching" name="teaching" rows="3"><%= data.teaching %></textarea>
            </div>
            <div class="mb-3">
                <label for="research" class="form-label">Research (One per line)</label>
                <textarea class="form-control" id="research" name="research" rows="3"><%= data.research %></textarea>
            </div>
            <div class="mb-3">
                <label for="supervision" class="form-label">Supervision</label>
                <input type="text" class="form-control" id="supervision" name="supervision" value="<%= data.supervision %>">
            </div>
            <div class="mb-3">
                <label for="publication" class="form-label">Publications (One per line)</label>
                <textarea class="form-control" id="publication" name="publication" rows="3"><%= data.publication %></textarea>
            </div>
            <div class="mb-3">
                <label for="responsibility" class="form-label">Responsibilities (One per line)</label>
                <textarea class="form-control" id="responsibility" name="responsibility" rows="3"><%= data.responsibility %></textarea>
            </div>
            <div class="mb-3">
                <label for="anyOther" class="form-label">Any Other Information (One per line)</label>
                <textarea class="form-control" id="anyOther" name="anyOther" rows="3"><%= data.anyOther %></textarea>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username*</label>
                <input type="text" class="form-control" id="username" name="username" value="<%= data.username %>" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email*</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= data.email %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Social Links</label>
                <input type="url" class="form-control mb-2" id="twitter" name="socialLinks[twitter]" placeholder="Twitter URL" value="<%= data.socialLinks?.twitter %>">
                <input type="url" class="form-control mb-2" id="linkedin" name="socialLinks[linkedin]" placeholder="LinkedIn URL" value="<%= data.socialLinks?.linkedin %>">
                <input type="url" class="form-control mb-2" id="github" name="socialLinks[github]" placeholder="GitHub URL" value="<%= data.socialLinks?.github %>">
                <input type="url" class="form-control" id="facebook" name="socialLinks[facebook]" placeholder="Facebook URL" value="<%= data.socialLinks?.facebook %>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
