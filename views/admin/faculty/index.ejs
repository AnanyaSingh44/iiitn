<% layout('./admin/layout/boilerplate.ejs') -%>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Faculty List</h2>
        <a href="/admin/faculty/new" class="btn btn-primary mb-3">Add New Faculty</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% faculties.forEach(faculty => { %>
                    <tr>
                        <td><%= faculty.name %></td>
                        <td><%= faculty.department %></td>
                        <td><%= faculty.email %></td>
                        <td><%= faculty.position %></td>
                        <td>
                            <a href="/admin/faculty/edit/<%= faculty._id %>" class="btn btn-warning">Edit</a>
                            <form action="/admin/faculty/<%= faculty._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
